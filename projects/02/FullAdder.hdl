/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    HalfAdder(a=a, b=b, sum=ab1, carry=ab2);
    HalfAdder(a=ab1, b=c, sum=sum, carry=abc2);
    Or(a=ab2, b=abc2, out=carry);
}